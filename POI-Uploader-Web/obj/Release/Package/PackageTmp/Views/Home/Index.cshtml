@{
    Layout = "IndexLayout.cshtml";
    ViewBag.Title = "Index";
}

<form id="StatusForm">
		<fieldset>
			<legend>POI Uploader Status</legend>

            <p>
                <label for="Uploader">Uploader</label>
                <input id="Uploader" name="Uploader" type="text" value="@(Model.Uploader)"/>
			</p>

			<p>
                <label for="DNSServer">DNS</label>
                <input id="DNSServer" name="DNSServer" type="text" value="@(Model.DNSServer)"/>
			</p>

			<p>
                <label for="ContentServer">Content</label>
                <input id="ContentServer" name="ContentServer" type="text" value="@(Model.ContentServer)"/>
			</p>

			
		</fieldset>
</form>

<form id="LogForm">
    <fieldset>
        <legend>Server Log</legend>
            <p>
                <textarea id="ServerLog" name="ServerLog" disabled></textarea>
            </p>
    </fieldset>

</form>